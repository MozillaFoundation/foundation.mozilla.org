{
  "name": "network",
  "repository": "https://github.com/mozilla/network",
  "issues": "https://github.com/mozilla/network/issues",
  "version": "1.0.0",
  "description": "Mozilla Network",
  "scripts": {
    "autoprefix": "postcss --use autoprefixer -o network-api/app/networkapi/frontend/_css/main.compiled.css network-api/app/networkapi/frontend/_css/main.compiled.css",
    "build:common": "shx rm -rf network-api/app/networkapi/frontend && shx mkdir -p network-api/app/networkapi/frontend/_js && npm run build:env && npm run fetch && run-p build:images build:pug build:sass && npm run build:contribute",
    "build:contribute": "shx cp contribute.json network-api/app/networkapi/frontend/",
    "build:healthcheck": "node scripts/build-healthcheck.js > network-api/app/networkapi/frontend/healthcheck.html",
    "build:images": "shx rm -rf network-api/app/networkapi/frontend/_images && shx cp -r source/images network-api/app/networkapi/frontend/_images",
    "build:js-uncompressed": "webpack",
    "build:js": "webpack -p",
    "build:pug": "node scripts/build-pug.js",
    "build:sass": "shx mkdir -p network-api/app/networkapi/frontend/_css && node-sass source/sass/main.scss network-api/app/networkapi/frontend/_css/main.compiled.css && npm run autoprefix",
    "build:env": "node scripts/build-env.js",
    "build": "npm run build:common && npm run build:js",
    "build-uncompressed": "npm run build:common && npm run build:js-uncompressed",
    "fetch": "node scripts/fetch-json.js",
    "heroku-postbuild": "npm run build",
    "migrate": "cd network-api && source venv/bin/activate && python app/manage.py migrate",
    "optimize:svg": "find source/images -type f -name '*.svg' -print0 | xargs -0 -n 1 -P 6 svgo --multipass --pretty --enable=removeTitle",
    "optimize:jpg": "find source/images -type f -name '*.jpg' -print0 | xargs -0 -n 1 -P 6 -I '{}' guetzli --quality 93 '{}' '{}'",
    "optimize:png": "find source/images -type f -name '*.png' -print0 | xargs -0 -n 1 -P 6 optipng",
    "optimize": "run-p optimize:**",
    "server": "cd network-api && source venv/bin/activate && python app/manage.py runserver",
    "start": "npm i && npm run build-uncompressed && run-p server watch:**",
    "snyk": "snyk test --file=package.json && snyk test --file=requirements.txt",
    "test:eslint": "eslint --config ./.eslintrc.yaml scripts/**/*.js source/js/**/*.js source/js/components/**/*.jsx",
    "test:pug": "pug-lint source/pug/partials/ source/pug/templates/ source/pug/partials/",
    "test:scss": "stylelint \"source/sass/**/*.scss\" \"source/js/components/**/*.scss\" --syntax scss",
    "test": "npm run build && run-s test:**",
    "watch:images": "chokidar 'source/images/**/*' -c 'npm run build:images'",
    "watch:js": "chokidar 'source/js/**/*.js' 'source/js/**/*.jsx' -c 'npm run build:js-uncompressed'",
    "watch:pug": "chokidar 'source/pug/**/*.pug' 'locales/**/*.properties' 'source/json/**/*.json' -c 'npm run build:pug'",
    "watch:sass": "chokidar 'source/**/*.scss' -c 'npm run build:sass'"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "author": "Mozilla",
  "license": "MPL-2.0",
  "dependencies": {
    "ajv-cli": "^1.1.1",
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "browserslist": "^2.1.1",
    "chalk": "^1.1.3",
    "chokidar-cli": "^1.2.0",
    "classnames": "2.2.5",
    "dotenv": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint": "^3.14.1",
    "guetzli": "^1.0.1",
    "html-entities": "^1.2.1",
    "java.properties.js": "^1.0.2",
    "js-cookie": "2.1.4",
    "json-schema-faker-cli": "^2.0.0",
    "mofo-bootstrap": "3.2.0",
    "mofo-style": "^2.4.0",
    "moment": "^2.17.1",
    "node-sass": "^4.4.0",
    "npm-run-all": "^4.0.1",
    "optipng-bin": "^3.1.4",
    "postcss-cli": "^2.6.0",
    "postcss": "^5.2.11",
    "pug-lint": "^2.3.0",
    "pug": "^2.0.0-beta7",
    "react-dom": "15.4.2",
    "react-ga": "2.2.0",
    "react-markdown": "2.4.6",
    "react": "15.4.2",
    "request": "^2.79.0",
    "shelljs": "^0.7.6",
    "shx": "^0.2.2",
    "snyk": "^1.40.2",
    "stylelint-config-standard": "^16.0.0",
    "stylelint": "^7.7.1",
    "svgo": "^0.7.2",
    "webpack": "^2.2.1"
  },
  "engines": {
    "node": "^8.9.0"
  }
}
