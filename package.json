{
  "name": "mozilla-leadership-network",
  "repository": "https://github.com/mozilla/network",
  "issues": "https://github.com/mozilla/network/issues",
  "version": "1.0.0",
  "description": "Mozilla Leadership Network",
  "scripts": {
    "autoprefix": "node scripts/autoprefix.js",
    "build:images": "shx rm -rf dest/_images && shx cp -r source/images dest/_images",
    "build:js": "shx mkdir -p dest/_js && webpack",
    "build:pug": "node scripts/build-pug.js",
    "build:sass": "shx mkdir -p dest/_css && node-sass source/sass/main.scss dest/_css/main.compiled.css && npm run autoprefix",
    "build": "shx rm -rf dest && run-p build:**",
    "mock:json": "generate-json source/json/people.schema.json source/json/people.json",
    "server": "live-server ./dest --port=2017",
    "stage": "npm i && shx rm -rf dest && npm run build:pug -- --staging && npm run build:images && npm run build:js && npm run build:sass && node scripts/stage.js",
    "start": "npm i && npm run build && run-p server watch:**",
    "test:eslint": "eslint --config ./.eslintrc.yaml scripts/*.js source/js/*.js",
    "test:json": "ajv validate -s source/json/people.schema.json -d source/json/people.json",
    "test:pug": "pug-lint source/pug/**/*.pug",
    "test:scss": "stylelint 'source/sass/main.scss' --syntax scss",
    "test": "run-s test:**",
    "watch:images": "chokidar 'source/images/*' -c 'npm run build:images'",
    "watch:js": "chokidar 'source/js/**/*.js' 'source/js/**/*.jsx' -c 'npm run build:js'",
    "watch:pug": "chokidar 'source/pug/**/*.pug' 'locales/**/*.properties' 'source/json/**/*.json' -c 'npm run build:pug'",
    "watch:sass": "chokidar 'source/**/*.scss' -c 'npm run build:sass'"
  },
  "author": "Mozilla",
  "license": "MPL-2.0",
  "devDependencies": {
    "ajv-cli": "^1.1.1",
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "java.properties.js": "^1.0.2",
    "json-schema-faker-cli": "^2.0.0",
    "live-server": "^1.2.0",
    "mofo-style": "^2.4.0",
    "node-sass": "^4.4.0",
    "npm-run-all": "^4.0.1",
    "postcss": "^5.2.11",
    "postcss-cli": "^2.6.0",
    "pug": "^2.0.0-beta7",
    "pug-lint": "^2.3.0",
    "shelljs": "^0.7.6",
    "shx": "^0.2.2",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "mofo-bootstrap": "3.1.0",
    "react": "15.4.2",
    "react-dom": "15.4.2"
  }
}
