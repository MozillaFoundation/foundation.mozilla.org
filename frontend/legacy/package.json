{
  "name": "legacy",
  "version": "1.0.0",
  "repository": "https://github.com/mozilla/foundation.mozilla.org",
  "issues": "https://github.com/mozilla/foundation.mozilla.org/issues",
  "description": "Mozilla Foundation site",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "run-p build:legacy",
    "build:legacy": "run-s build:legacy:clean && run-p build:legacy:common build:legacy:js:prod && npm run postcss:legacy:build",
    "build:legacy:clean": "shx rm -rf ../../foundation_cms/legacy_apps/static/temp/compiled/legacy && shx rm -rf ../../foundation_cms/legacy_apps/static/compiled && shx mkdir -p ../../foundation_cms/legacy_apps/static/compiled/_js",
    "build:legacy:common": "run-p build:legacy:images build:legacy:fonts build:legacy:css build:legacy:contribute",
    "build:legacy:contribute": "shx cp ../../contribute.json ../../foundation_cms/legacy_apps/static/",
    "build:legacy:images": "shx rm -rf ../../foundation_cms/legacy_apps/static/compiled/_images && shx cp -r ../../foundation_cms/legacy_apps/static/images ../../foundation_cms/legacy_apps/static/compiled/_images",
    "build:legacy:js:dev": "node esbuild.config.js -- --node-env development",
    "build:legacy:js:prod": "node esbuild.config.js -- --node-env production",
    "build:legacy:fonts": "run-p build:legacy:fonts:fonts && run-p build:legacy:fonts:css",
    "build:legacy:fonts:fonts": "shx rm -rf ../../foundation_cms/legacy_apps/static/compiled/_fonts && cp -r ../../foundation_cms/legacy_apps/static/fonts ../../foundation_cms/legacy_apps/static/compiled/_fonts",
    "build:legacy:fonts:css": "run-p build:legacy:fonts:css:**",
    "build:legacy:fonts:css:base": "sass --style=compressed ../../foundation_cms/legacy_apps/static/fonts/css/base.css ../../foundation_cms/legacy_apps/static/compiled/_fonts/css/base.min.css && shx rm ../../foundation_cms/legacy_apps/static/compiled/_fonts/css/base.css",
    "build:legacy:fonts:css:caveat": "sass --style=compressed ../../foundation_cms/legacy_apps/static/fonts/css/caveat.css ../../foundation_cms/legacy_apps/static/compiled/_fonts/css/caveat.min.css && shx rm ../../foundation_cms/legacy_apps/static/compiled/_fonts/css/caveat.css",
    "build:legacy:fonts:css:changa": "sass --style=compressed ../../foundation_cms/legacy_apps/static/fonts/css/changa.css ../../foundation_cms/legacy_apps/static/compiled/_fonts/css/changa.min.css && shx rm ../../foundation_cms/legacy_apps/static/compiled/_fonts/css/changa.css",
    "build:legacy:css": "run-p build:legacy:css:file:**",
    "build:legacy:css:file:main": "sass ../../foundation_cms/legacy_apps/static/sass/main.scss ../../foundation_cms/legacy_apps/static/temp/compiled/legacy_apps/_css/main.compiled.css --quiet",
    "build:legacy:css:file:bg": "sass ../../foundation_cms/legacy_apps/static/sass/buyers-guide/bg-main.scss ../../foundation_cms/legacy_apps/static/temp/compiled/legacy_apps/_css/buyers-guide.compiled.css --quiet",
    "build:legacy:css:file:donate": "sass ../../foundation_cms/legacy_apps/static/sass/donate/donate-main.scss ../../foundation_cms/legacy_apps/static/temp/compiled/legacy_apps/_css/donate.compiled.css --quiet",
    "build:legacy:css:file:formassembly": "sass ../../foundation_cms/legacy_apps/static/sass/formassembly-override.scss ../../foundation_cms/legacy_apps/static/temp/compiled/legacy_apps/_css/formassembly-override.compiled.css --quiet",
    "build:redesign": "cd frontend && yarn install --frozen-lockfile && yarn build",
    "fix": "run-s fix:*",
    "fix:js": "node ./lint-js.js --fix",
    "fix:css": "run-p lint:legacy:css:scss -- --fix",
    "fix:scss": "run-p fix:css",
    "heroku-postbuild": "npm run build:legacy && npm run build:redesign",
    "lint": "run-p lint:legacy",
    "lint:legacy": "run-s lint:legacy:*",
    "lint:legacy:procfile": "node test/test-procfile.js",
    "lint:legacy:js": "run-s lint:legacy:js:*",
    "lint:legacy:js:eslint": "node ./lint-js.js",
    "lint:css": "run-p lint:legacy:css",
    "lint:legacy:css": "run-s lint:legacy:css:*",
    "lint:legacy:css:scss": "stylelint \"../../foundation_cms/legacy_apps/static/sass/**/*.scss\" \"../../foundation_cms/legacy_apps/static/js/**/*.scss\" --custom-syntax postcss-scss",
    "lint:legacy:css:scss:color": "stylelint \"../../foundation_cms/legacy_apps/static/sass/**/*.scss\" \"../../foundation_cms/legacy_apps/static/js/**/*.scss\" \"!../../foundation_cms/legacy_apps/static/sass/**/_colors.scss\" \"!../../foundation_cms/legacy_apps/static/sass/**/formassembly-override.scss\" --custom-syntax postcss-scss --config .stylelintrc-colors.js",
    "lint:legacy:css:network": "stylelint \"../../foundation_cms/legacy_apps/{,!(static)/**/}*.css\" --custom-syntax postcss-scss",
    "postcss:legacy:build": "postcss --config ./postcss.config.js ../../foundation_cms/legacy_apps/static/temp/compiled/legacy_apps/_css/*.css --dir ../../foundation_cms/legacy_apps/static/compiled/_css --verbose",
    "postcss:legacy:watch": "TAILWIND_MODE=watch postcss --config ./postcss.config.js ../../foundation_cms/legacy_apps/static/temp/compiled/legacy_apps/_css/*.css --dir ../../foundation_cms/legacy_apps/static/compiled/_css --watch --verbose",
    "optimize": "run-p optimize:legacy",
    "optimize:legacy": "run-p optimize:legacy:**",
    "optimize:legacy:svg": "svgo --multipass --folder ./../../foundation_cms/legacy_apps/static/images/ --recursive",
    "optimize:legacy:jpg": "find ../../foundation_cms/legacy_apps/static/images -type f -name '*.jpg' -print0 | xargs -0 -n 1 -P 6 -I '{}' guetzli --quality 93 '{}' '{}'",
    "optimize:legacy:png": "find ../../foundation_cms/legacy_apps/static/images -type f -name '*.png' -print0 | xargs -0 -n 1 -P 6 optipng",
    "percy": "npm run percy:legacy",
    "percy:legacy": "percy exec -t 750 -- npm run playwright:legacy:percy",
    "playwright": "run-p playwright:legacy",
    "playwright:ci": "run-p playwright:legacy:ci",
    "playwright:install": "playwright install chromium firefox webkit",
    "playwright:legacy": "run-p playwright:legacy:integration",
    "playwright:legacy:percy": "npm run server & npm run playwright:legacy:visual",
    "playwright:legacy:urls": "wait-on -i 3000 -t 120000 -v http://127.0.0.1:8000/cms && playwright test ./tests/urls.spec.js",
    "playwright:legacy:visual": "wait-on -i 3000 -t 120000 -v http://127.0.0.1:8000/cms && playwright test ./tests/visual.spec.js",
    "playwright:legacy:ci": "run-p --race server playwright:legacy:integration",
    "playwright:legacy:integration": "wait-on -i 3000 -t 120000 -v http://127.0.0.1:8000/cms && playwright test ./tests/integration/",
    "precommit": "npm run test",
    "prettier:js": "run-p prettier:legacy:js",
    "prettier:scss": "run-p prettier:legacy:scss",
    "prettier:legacy:js": "prettier \"../../foundation_cms/legacy_apps/static/js/**/*.js\" \"../../foundation_cms/legacy_apps/static/js/**/*.jsx\" \"../../foundation_cms/legacy_apps/wagtailcustomization/**/*.js\" \"tests/**/*.js\" ./*.js",
    "prettier:legacy:scss": "prettier \"../../foundation_cms/legacy_apps/static/sass/**/*.scss\" \"../../foundation_cms/legacy_apps/static/js/**/*.scss\" \"../../foundation_cms/legacy_apps/{,!(static)/**/}*.css\"",
    "pyright": "pyright",
    "server": "cd ../../ && python manage.py runserver 0.0.0.0:8000",
    "server:silent": "cd ../../ && python manage.py runserver 0.0.0.0:8000 >> server.log 2>&1",
    "start": "docker-compose up",
    "sync": "browser-sync start --proxy \"localhost:8000\" --reload-debounce 50 --files \"./../../foundation_cms/legacy_apps/**/*.html\" \"./../../foundation_cms/legacy_apps/static/compiled/_css/*.css\" \"./../../foundation_cms/legacy_apps/static/compiled/_js/*.js\"",
    "test": "npm run lint",
    "watch": "run-p watch:legacy",
    "watch:legacy": "run-s build:legacy:clean && run-p build:legacy:common && run-p build:legacy:js:dev postcss:legacy:watch watch:legacy:**",
    "watch:legacy:images": "chokidar \"../../foundation_cms/legacy_apps/static/images/**/*\" -c \"npm run build:legacy:images\"",
    "watch:legacy:scss": "chokidar \"../../foundation_cms/legacy_apps/static/**/*.scss\" -c \"npm run build:legacy:css\""
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "author": "Mozilla",
  "license": "MPL-2.0",
  "dependencies": {
    "@sentry/browser": "^8.54.0",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "bootstrap": "^4.6.0",
    "chart.js": "4.4.9",
    "classnames": "2.5.1",
    "countup.js": "^2.8.2",
    "cssnano": "^7.0.6",
    "esbuild": "^0.25.2",
    "gsap": "^3.12.7",
    "htmx.org": "^1.9.12",
    "locomotive-scroll": "^4.1.4",
    "moment": "^2.29.4",
    "npm-run-all": "^4.1.3",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-scss": "^4.0.9",
    "prop-types": "^15.7.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-ga": "3.3.1",
    "sass": "^1.59.3",
    "shx": "^0.3.4",
    "swiper": "^11.2.6",
    "tailwindcss": "^3.4.15",
    "uuid": "^10.0.0",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.1",
    "@percy/cli": "^1.31.3",
    "@percy/playwright": "^1.0.9",
    "@playwright/test": "^1.56.1",
    "browser-sync": "^3.0.4",
    "browserslist": "^4.24.4",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.37.4",
    "optipng-bin": "^9.0.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.17.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-prettier": "^5.0.3",
    "svgo": "^3.3.2",
    "wait-on": "^8"
  }
}
