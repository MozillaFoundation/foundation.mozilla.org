{
  "name": "mozillafoundation.org",
  "version": "1.0.0",
  "license": "MPL-2.0",
  "description": "Foundation Framework-based frontend for new Mozilla Foundation site, using Yarn and esbuild. Independent from npm build tasks for the legacy site",
  "repository": "https://github.com/MozillaFoundation/foundation.mozilla.org",
  "author": "Mozilla Foundation",
  "scripts": {
    "clean:css": "shx rm -rf ../foundation_cms/static/temp/* ../foundation_cms/static/compiled/_css/*",
    "clean:js": "shx rm -rf ../foundation_cms/static/compiled/_js/*",
    "clean": "run-p clean:css clean:js",
    "build:css": "node build-css.js",
    "watch:css": "run-s build:css && chokidar '../foundation_cms/static/scss/**/*.scss' -c 'yarn build:css'",
    "build:js": "node esbuild.config.js --node-env production",
    "watch:js": "node esbuild.config.js --node-env development",
    "build": "run-s clean build:css build:js",
    "predev": "yarn clean",
    "dev": "run-p watch:css watch:js"
  },
  "dependencies": {
    "esbuild": "^0.25.2",
    "foundation-sites": "^6.9.0",
    "sass": "^1.86.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "shx": "^0.4.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
