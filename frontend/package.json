{
  "name": "foundation.mozilla.org",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MPL-2.0",
  "description": "Foundation Framework-based frontend for new Mozilla Foundation site, using Yarn and esbuild. Independent from npm build tasks for the legacy site",
  "repository": "https://github.com/MozillaFoundation/foundation.mozilla.org",
  "author": "Mozilla Foundation",
  "scripts": {
    "build:css:sass": "sass ../foundation_cms/static/scss/redesign_main.scss ../foundation_cms/static/temp/redesign_main.unprocessed.css --style=compressed",
    "build:css:postcss": "postcss ../foundation_cms/static/temp/redesign_main.unprocessed.css -o ../foundation_cms/static/compiled/redesign_main.css --config ./postcss.config.js",
    "build:css": "run-s build:css:sass build:css:postcss",
    "watch:css:sass": "chokidar '../foundation_cms/static/scss/**/*.scss' -c 'yarn build:css:sass'",
    "watch:css:postcss": "chokidar '../foundation_cms/static/temp/**/*.css' -c 'yarn build:css:postcss'",
    "watch:css": "run-p watch:css:sass watch:css:postcss",
    "build": "yarn build:css",
    "dev": "yarn watch:css"
  },
  "dependencies": {
    "esbuild": "^0.25.2",
    "foundation-sites": "^6.9.0",
    "sass": "^1.86.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "shx": "^0.4.0"
  }
}
