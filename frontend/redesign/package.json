{
  "name": "redesign",
  "version": "1.0.0",
  "license": "MPL-2.0",
  "description": "Foundation Framework-based frontend for new Mozilla Foundation site, using Yarn and esbuild. Independent from npm build tasks for the legacy site",
  "repository": "https://github.com/MozillaFoundation/foundation.mozilla.org",
  "author": "Mozilla Foundation",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "copy:fonts": "shx mkdir -p ../../foundation_cms/static/compiled/fonts && shx cp -r ../../foundation_cms/static/fonts/* ../../foundation_cms/static/compiled/fonts/",
    "copy:images": "shx mkdir -p ../../foundation_cms/static/compiled/_images && shx cp -r ../../foundation_cms/static/images/. ../../foundation_cms/static/compiled/_images",
    "clean:css": "shx rm -rf ../../foundation_cms/static/temp/* ../../foundation_cms/static/compiled/_css/*",
    "clean:js": "shx rm -rf ../../foundation_cms/static/compiled/_js/*",
    "clean:fonts": "shx rm -rf ../../foundation_cms/static/compiled/fonts/*",
    "clean:images": "shx rm -rf ../../foundation_cms/static/compiled/_images",
    "clean": "run-p clean:css clean:js clean:fonts clean:images",
    "build:css": "NODE_ENV=production node build-css.js",
    "build:js": "node esbuild.config.js --node-env production",
    "build:images": "run-s copy:images",
    "build": "run-s clean copy:fonts build:css build:js build:images",
    "watch:css": "NODE_ENV=development node build-css.js && chokidar '../../foundation_cms/static/scss/**/*.scss' -c 'NODE_ENV=development node build-css.js'",
    "watch:js": "node esbuild.config.js --node-env development",
    "watch:images": "run-s build:images && chokidar '../../foundation_cms/static/images/**/*' -c 'yarn clean:images && yarn build:images'",
    "predev": "yarn clean",
    "dev": "run-p watch:css watch:js watch:images",
    "fix": "run-s fix:js fix:scss",
    "fix:scss": "stylelint \"../../foundation_cms/static/scss/**/*.scss\" --config stylelint.config.cjs --fix",
    "fix:js": "run-p fix:js:*",
    "fix:js:eslint": "node ./lint-js.js --fix",
    "lint": "run-s lint:js lint:scss",
    "lint:scss": "stylelint \"../../foundation_cms/static/scss/**/*.scss\" --config stylelint.config.cjs",
    "lint:js": "run-p lint:js:*",
    "lint:js:eslint": "node ./lint-js.js",
    "check-format": "run-s check-format:js check-format:scss",
    "check-format:js": "prettier \"../../foundation_cms/static/js/**/*.js\" --check",
    "check-format:scss": "prettier \"../../foundation_cms/static/scss/**/*.scss\" --check --ignore-path .prettierignore",
    "format": "run-s format:js format:scss",
    "format:js": "prettier \"../../foundation_cms/static/js/**/*.js\" --write",
    "format:scss": "prettier \"../../foundation_cms/static/scss/**/*.scss\" --write --ignore-path .prettierignore"
  },
  "dependencies": {
    "delicious-hamburgers": "^1.2.3",
    "esbuild": "^0.25.2",
    "foundation-sites": "^6.9.0",
    "jquery": "^3.7.1",
    "sass": "^1.86.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.26.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "stylelint": "15.10.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "14.0.0",
    "stylelint-config-standard-scss": "10.0.0",
    "stylelint-scss": "5.2.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
