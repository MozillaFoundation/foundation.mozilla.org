{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "chance": "name"
      },
      "role": {
        "type": "string"
      },
      "location": {
        "type": "string",
        "faker": "address.country"
      },
      "affiliations": {
        "type": "array",
        "items": {
          "type": "string",
          "faker": "company.companyName"
        }
      },
      "links": {
        "type": "object",
        "properties": {
          "twitter": {
            "type": "string"
          },
          "linkedIn": {
            "type": "string"
          },
          "interview": {
            "type": "string"
          }
        }
      },
      "image": {
        "type": "string",
        "faker": "internet.avatar"
      },
      "partnership_logo": {
        "type": ["string", "null"],
        "faker": "image.abstract"
      },
      "quote": {
        "type": "string",
        "faker": "lorem.sentence"
      },
      "bio": {
        "type": "string",
        "faker": "lorem.sentence"
      },
      "internet_health_issues": {
        "type": "array",
        "items": {
          "type": "string",
          "chance": {
            "pickset": [
              [
                "Web Literacy",
                "Online Privacy & Security",
                "Digital Inclusion",
                "Decentralization",
                "Open Innovation"
              ]
            ]
          }
        }
      },
      "featured": {
        "type": "boolean"
      }
    },
    "required": [
      "name",
      "role",
      "location",
      "affiliations",
      "links",
      "image",
      "featured",
      "internet_health_issues",
      "bio",
      "quote",
      "partnership_logo"
    ]
  }
}
