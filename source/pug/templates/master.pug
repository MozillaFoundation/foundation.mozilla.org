block masterParams

mixin subpageHero(header, subhead)
  .row.py-5.d-flex.align-items-center.subpageHero
    .col-md-6
      h1.h1-white=header
    .col-md-6
      p.lead-white=subhead

doctype html
html
  - if (isMezzanine)
    | {% load settings_value %}
  head
    meta(charset=`utf-8`)

    meta(name=`viewport`, content=`width=device-width, initial-scale=1`)
    meta(name=`description`, content=`Mozilla Network is a global network keeping the internet open and accessible to all.`)

    meta(property=`og:type`, content=`website`)
    meta(property=`og:site_name`, content=`${strings.MLN}`)
    meta(property=`og:locale`, content=`en_US`)
    meta(property=`og:url`, content=`https://${env.TARGET_DOMAIN}${target}`)
    meta(property=`og:title`, content=`${strings.MLN} – ${pageTitle}`)

    meta(http-equiv=`Content-Security-Policy`, content=`${env[`CSP`]}`)

    link(rel=`stylesheet`, href!=`${baseURL || env[`VIRTUAL_ROOT`]}_css/main.compiled.css`)
    link(rel=`stylesheet`, href=`//code.cdn.mozilla.net/fonts/fira.css`)
    link(rel=`stylesheet`, href=`//fonts.googleapis.com/css?family=Nunito+Sans:400,600,300i`)
    link(rel=`stylesheet`, href=`//fonts.googleapis.com/css?family=Arvo`)
    link(rel=`apple-touch-icon` type=`image/png` sizes=`180x180` href!=`${baseURL || env[`VIRTUAL_ROOT`]}_images/favicons/apple-touch-icon-180x180.png`)
    link(rel=`icon` type=`image/png` sizes=`196x196` href!=`${baseURL || env[`VIRTUAL_ROOT`]}_images/favicons/favicon-196x196.png`)
    link(rel=`shortcut icon` href!=`${baseURL || env[`VIRTUAL_ROOT`]}_images/favicons/favicon.ico`)

    title=`${strings.MLN} – ${pageTitle}`

  body(id=`view-${templateID}`)
    .takeover
    #primary-nav
    .wrapper
      #member-notice Welcome to our member preview. It’s a work in progress and we invite your #[a(href=`https://mzl.la/2ohCL8O`) feedback].
      .sticky-top
        .wrapper-join-us
          .container
            #join-us.join-us
        .wrapper-burger
          .container
            .row
              .col.p-4
                .d-flex.flex-row.justify-content-between.align-items-center
                  div.d-flex.align-items-center
                    button#burger
                    a.logo.text-hide(href=`${env[`VIRTUAL_ROOT`]}`) Mozilla Network
                  .center-nav-title.hidden-xs-down
                    block centerNav
                  - if (hideGetInvolved !== true)
                    a.btn.btn-pop(href="/sign-up") Sign Up
      #hero
        .container
          block heroGuts

      block content

      footer.mofo-footer
        .container
          ul.list-unstyled.footer-links.row.justify-content-center
            //- li.col-auto
            //-   a(href="https://desk.com" class="footer-link-email") Email
            li.col-auto
              a(href="https://twitter.com/mozilla" class="footer-link-twitter") Twitter
            li.col-auto
              a(href="https://www.facebook.com/mozilla" class="footer-link-facebook") Facebook
            li.col-auto
              a(href="https://creativecommons.org/licenses/by/4.0" class="footer-link-cc-license") License
            //- li.col-auto
            //-   a(href="#" class="footer-link-code-of-conduct") Code of Conduct
            li.col-auto
              a(href="https://mozilla.org/en-US/about/legal/" class="footer-link-legal") Legal
            li.col-auto
              a(href="https://mozilla.org/en-US/privacy/websites/" class="footer-link-privacy") Privacy
            li.col-auto
              a(href="https://donate.mozilla.org" class="footer-link-donate") Donate
          .org-info.mozilla
            div.logo-container
              a.logo(href="https://mozilla.org")
            p Mozilla is a global non-profit dedicated to putting you in control of your online experience and shaping the future of the web for the public good. Visit us at #[a(href="https://mozilla.org") mozilla.org].

script(src!=`${baseURL || env[`VIRTUAL_ROOT`]}_js/main.compiled.js`)

