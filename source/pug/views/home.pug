extends ../templates/master.pug

include ../partials/pulse-projects.pug

mixin newsItem(source, title, url, date, glyph, author)
  .news-item
    .d-flex.align-items-center.mb-3
      img(src=`${env.virtualRoot}_images/news-icons/${glyph}`).mr-2
      p.h6-gray.mb-0=source
    h5
      a.h4-medium-black(href=`${url}`)=title
    if author
      p.italic-black by #{author}
    p.small-gray=date

block heroGuts
  .row
    .col.p-4
      .mb-4: h1.h1-home-white We Are Champions#[br] of a Healthy Internet
      p.lead-black The Mozilla Networks brings together diverse leaders of all types. Join its ranks.

block content
  .container
    .join-us
    .row.py-5
      .col-4
        p.h6-gray Fellowships
        h3.h4-light-black
          a(href=`${env.virtualRoot}programs/fellowships`) Fellowships That Empower People
      .col-4
        p.h6-gray Training
        h3.h4-light-black
          a(href=`${env.virtualRoot}TODO`) Leadership Training for Open Source
      .col-4
        p.h6-gray Internet Health Report
        h3.h4-light-black
          a(href=`${env.virtualRoot}TODO`) Read and Expand the Internet Health Report

    .row
      .col.my-5
        h4.h2-headings-white Latest News

    .row.mb-5
      .col-6.d-flex
        .p-5.news-item-featured
          +newsItem(`CNBC`, `Mozilla's art installation warns about how companies are using your data`, `http://www.cnbc.com/2016/12/13/mozillas-the-glass-room-warns-about-how-companies-are-using-your-data.html`, `December 2016`, `cnbc.svg`)
          p.body-black Most of us assume no one cares about what we look at on our devices, but the data is being used to create a picture of who we are and where we went â€” and, for the most part, it's completely legal.
      .col-6
        .pb-4
          +newsItem(`The New Statesman`, `The Rise of Digital Empires`, `http://bit.ly/2bGMj65`, `September 2016`, `ns.png`)
          hr
          +newsItem(`Mozilla Internet Citizen`, `Living Inside the Computer: Building Responsible IoT`, `https://medium.com/mozilla-internet-citizen/living-inside-the-computer-mozilla-is-calling-for-responsible-iot-6cd57b146705#.kn8oxu4dc`, `January 2017`, `medium.svg`)
          hr
          +newsItem(`Read, Write, Participate`, `Teaching the Web, with Art as Curriculum`, `https://medium.com/read-write-participate/teaching-the-web-with-art-as-curriculum-c1d1c86fb12a#.mkjyfv8w0`, `December 2016`, `medium.svg`)

    .row
      .col.text-center
        a.btn.btn-ghost(href=`${env.virtualRoot}news`) View more news

    .row
      .col.my-5
        .mb-5: h4.h2-headings-white Network Creations
        p.h4-light-black.text-center The latest tools, apps, and ideas from our network

    // This will be replaced by a React component, but is rendered for indexing
    +projects(data.pulse.results.slice(0,6), true)

    .row.mb-5
      .col.text-center
        a.btn.btn-ghost(href=`${env.virtualRoot}projects`) View more projects
