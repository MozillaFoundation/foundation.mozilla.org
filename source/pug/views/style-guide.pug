              .p-2
                strong Blue ($blue)
                .color-code.small #3bb7ef
                .color-code.small rgba(59, 183, 239, 1)
          .col-sm-6.col-md-3.mb-3
            .color-display.d-flex.flex-column.h-100
              .color-block.w-100.px-2.py-5.dark-blue
