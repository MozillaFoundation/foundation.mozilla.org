extends ../templates/master.pug

block masterParams
  - let pageTitle = `Style Guide`;

block content
  .container
    .row
      .col-12.pb-5
        h1 Style Guide

        h2 Colors

        .row
          .col-sm-6.col-md-3.mb-3
