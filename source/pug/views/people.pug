extends ../templates/master.pug

mixin person(meta)
  div
    h4=meta.name
    p=meta.role
    p=meta.location
    p
      each affiliation in meta.affiliations
        small #{affiliation},&nbsp;

block centerNav
  p People

block heroGuts
  +subpageHero(`Diverse Members, One Mission`, `Network members speak many languages and span many disciplines. But we all believe in a healthy Internet.`)

block content
  .container.py-5
    // This will be replaced by a React component, but this content is left available for indexing (SEO)
    #people
      each person, index in data
        +person(data[index])
